# ========================================
# TurnoFacil - Variables de Entorno
# ========================================
# Copia este archivo a .env y configura tus valores
# NUNCA subas el archivo .env a control de versiones

# ========================================
# PERFIL DE SPRING
# ========================================
# dev = desarrollo (logs verbose, errores detallados)
# prod = produccion (seguro, optimizado)
SPRING_PROFILES_ACTIVE=dev

# ========================================
# BASE DE DATOS (OBLIGATORIO)
# ========================================
DB_URL=jdbc:mysql://localhost:3306/turnofacil_db?useSSL=false&serverTimezone=UTC&allowPublicKeyRetrieval=true
DB_USERNAME=tu_usuario
DB_PASSWORD=tu_password_seguro

# Solo en desarrollo usar 'update', en produccion usar 'validate'
DDL_AUTO=update

# ========================================
# EMAIL (OBLIGATORIO para produccion)
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=465
MAIL_USERNAME=tu_email@gmail.com
MAIL_PASSWORD=tu_app_password
EMAIL_ENABLED=false

# ========================================
# SEGURIDAD
# ========================================
# Mostrar detalles de errores (NUNCA true en produccion)
SHOW_ERROR_DETAILS=false

# Cookie de sesion segura (true si usas HTTPS)
SESSION_SECURE=false

# ========================================
# DESARROLLO (solo para perfil dev)
# ========================================
SHOW_SQL=false
THYMELEAF_CACHE=false
